<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default" role="navigation">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Book", "Book")</li>
                <li>@Html.ActionLink("Books", "Book", "Book")</li>
                <li>@Html.ActionLink("Authors", "Author", "Author")</li>
                <li>@Html.ActionLink("Genres", "Genre", "Genre")</li>
                <li>@Html.ActionLink("Stores", "Store", "Store")</li>
            </ul>
        </nav>
        <div class="container body-content">
            @if (TempData["message"] != null)
            {
                <p class="message">@TempData["message"]</p>
            }
            @RenderBody()
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p class="glyphicon glyphicon-copyright-mark" aria-hidden="true">This is an Barkins' Production</p>
        </div>
    </footer>
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("viewScripts", false)
</body>

</html>